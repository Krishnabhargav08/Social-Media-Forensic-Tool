# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
DEBUG=True

# MongoDB Configuration
# Option 1: Local MongoDB (requires installation)
# MONGO_URI=mongodb://localhost:27017/forensic_tool

# Option 2: MongoDB Atlas (free cloud database)
# Sign up at https://www.mongodb.com/cloud/atlas/register
# Create free cluster, get connection string, paste below:
MONGO_URI=mongodb://localhost:27017/forensic_tool

# Email Configuration (Optional - for alerts)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@forensictool.com

# File Upload Settings
MAX_CONTENT_LENGTH=16777216

# Security Settings
BCRYPT_LOG_ROUNDS=12

# ==========================================
# Feature Flags
# ==========================================
USE_REAL_SCRAPING=False
USE_ADVANCED_AI=False

# ==========================================
# OPTIONAL: Social Media API Keys
# ==========================================
# Uncomment and fill these to enable real scraping
# Set USE_REAL_SCRAPING=True to activate

# Twitter API v2 (Get from: https://developer.twitter.com/en/portal/dashboard)
# TWITTER_BEARER_TOKEN=your-twitter-bearer-token
# TWITTER_API_KEY=your-twitter-api-key
# TWITTER_API_SECRET=your-twitter-api-secret
# TWITTER_ACCESS_TOKEN=your-twitter-access-token
# TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Instagram Graph API (Get from: https://developers.facebook.com/apps/)
# INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
# INSTAGRAM_CLIENT_ID=your-instagram-client-id
# INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# Reddit API (Get from: https://www.reddit.com/prefs/apps)
# REDDIT_CLIENT_ID=your-reddit-client-id
# REDDIT_CLIENT_SECRET=your-reddit-client-secret
# REDDIT_USER_AGENT=ForensicTool/1.0

# ==========================================
# OPTIONAL: AI Analysis API Keys
# ==========================================
# Uncomment to enable advanced AI analysis
# Set USE_ADVANCED_AI=True to activate

# OpenAI GPT-4 (Get from: https://platform.openai.com/api-keys)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# ==========================================
# Installation Instructions
# ==========================================
# For Real API Scraping:
# pip install tweepy instaloader praw
#
# For Advanced AI Analysis:
# pip install openai transformers torch sentencepiece
